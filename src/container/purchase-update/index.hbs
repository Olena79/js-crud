<main class='main'>
  <div class='main_card'>

    {{> purchase-heading title="Зміна данних"}}

    {{#with data}}
      <form method='POST' action='/purchase-update?id={{id}}' class='form-card'>
        
        <div class="string">
          <span class="string__name">ID: </span>
          <span class="string__name">{{id}}</span>
        </div>

        {{> divider}}

        <div class="string">
          {{> field label="Ім'я" placeholder=firstname name="firstname"}}

          {{> field label="Прізвище" name="lastname"}}
        </div> 

        <div class="string">
          {{> field label="Телефон" name="phone"}}

          {{> field label="Пошта" name="email"}}
        </div> 

        {{> divider}}

        {{> field label="Коментар" name="comment"}}
        
        {{> divider}}

        {{> button text="Зберегти зміни"}}
        

      </form>
    {{/with}}

    
    
    
    

  </div>
</main>