<main class="main">
  <div class="main__content">
    {{> purchase-heading title="Інформація про товар"}}

    {{#with data.product}}
    <form method="POST" action="/purchase-create?id={{id}}">
      <div class="product-info">

        <img src="{{img}}" alt="{{title}}" class="product-info__image">
        <h2 class="product-info__title">{{title}}</h2>
        <p class="product-info__subtitle">{{description}}</p>

        {{> divider}}

        {{#each category}}
        <span class="product-info__category product-info__category--{{id}}">{{text}}
          <img src="{{svg}}" class="product-info__category-svg">
        </span>
        {{/each}}

        {{> divider}}

        {{> field label="Кількість" type="number" name="amount" value="1"}}

        <a href="/purchase-product?id={{id}}&amount={{amount}}">
          {{> button text="Купити зараз:" price=price}}
        </a>

      </div>
    </form>
    {{/with}}

    {{> purchase-heading title="Інші товари" info="Комп'ютери та ноутбуки/Комп'ютери, неттопи, моноблоки"}}

    <div class="product-list">
      {{#each data.list}}
      {{> purchase-product data=this}}
      {{/each}}
    </div>
  </div>
</main>